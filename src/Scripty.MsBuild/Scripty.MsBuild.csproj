<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ProjectGuid>{02AA19AC-F899-4764-A8B8-D92AF080998D}</ProjectGuid>
    <TargetFramework>net48</TargetFramework>
    <AssemblyTitle>Scripty.MsBuild</AssemblyTitle>
    <Description>A MSBuild task that automatically runs Roslyn (csx) scripts before compilation as an alternative to T4.</Description>
    <Copyright>Copyright 2016</Copyright>
    <!--<Version>$version$</Version>-->
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <Authors>Dave Glick</Authors>
    <PackageId>Scripty.MsBuild</PackageId>
    <PackageLicenseUrl>https://github.com/daveaglick/Scripty/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/daveaglick/Scripty</PackageProjectUrl>
    <PackageTags>T4 MSBuild Scripting Roslyn CodeGeneration CodeGen</PackageTags>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="..\SolutionInfo.cs" Link="Properties\SolutionInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Scripty.MsBuild.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <SubType>Designer</SubType>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build" Version="16.5.0" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.5.0" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="vswhere" Version="2.8.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>